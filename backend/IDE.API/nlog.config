<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Info"
      internalLogFile="c:\temp\internal-nlog.txt">

  <extensions>
    <add assembly="NLog.Web.AspNetCore"/>
  </extensions>
  
  <variable name='folder' value='${aspnet-appbasepath}\logs'/>
  
  <!-- the targets to write to -->
  <targets>
    <target xsi:type="file" name="debug" fileName="${folder}\${shortdate}\Debug.log" deleteOldFileOnStartup="true"
            layout="${longdate}|${event-properties:item=EventId_Id}|${uppercase:${level}}|${logger}|${message} ${exception:format=tostring}" />
    
    <target xsi:type="file" name="info" fileName="${folder}\${shortdate}\Info.log" deleteOldFileOnStartup="true"
            layout="${longdate}|${event-properties:item=EventId_Id}|${uppercase:${level}}|${logger}|${message} ${exception:format=tostring}" />
    
    <target xsi:type="file" name="warn" fileName="${folder}\${shortdate}\Warn.log" deleteOldFileOnStartup="true"
            layout="${longdate}|${event-properties:item=EventId_Id}|${uppercase:${level}}|${logger}|${message} ${exception:format=tostring}|url: ${aspnet-request-url}|action: ${aspnet-mvc-action}" />
    
    <target xsi:type="file" name="error" fileName="${folder}\${shortdate}\Error.log"
            layout="${longdate}|${event-properties:item=EventId_Id}|${uppercase:${level}}|${logger}|${message} ${exception:format=tostring}|url: ${aspnet-request-url}|action: ${aspnet-mvc-action}" />
    
    <target xsi:type="File" name="fatal" fileName="${folder}\${shortdate}\Fatal.log"
            layout="${longdate}|${event-properties:item=EventId_Id}|${uppercase:${level}}|${logger}|${message} ${exception:format=tostring}|url: ${aspnet-request-url}|action: ${aspnet-mvc-action}" />

    <target xsi:type="File" name="all" fileName="${folder}\${shortdate}\All.log" deleteOldFileOnStartup="true"
            layout="${longdate}|${event-properties:item=EventId_Id}|${uppercase:${level}}|${logger}|${message} ${exception:format=tostring}|url: ${aspnet-request-url}|action: ${aspnet-mvc-action}" />
  
    <target xsi:type="file" name="warnings" fileName="${folder}\${shortdate}\WarningsPlus.log" deleteOldFileOnStartup="true"
            layout="${longdate}|${event-properties:item=EventId_Id}|${uppercase:${level}}|${logger}|${message} ${exception:format=tostring}" />
    
    <target xsi:type="File" name="microsoftErrors" fileName="${folder}\${shortdate}\MicrosoftErrors.log"
            layout="${longdate}|${event-properties:item=EventId_Id}|${uppercase:${level}}|${logger}|${message} ${exception:format=tostring}" />

  </targets>

  <!-- rules to map from logger name to target -->
  <rules>
    <logger name="*" writeTo="all" enabled="true" /> <!-- set to false on prod -->
    <logger name="Microsoft.*" maxlevel="Info" final="true" />
    
    <logger name="Microsoft.*" minlevel="Warn" writeTo="microsoftErrors" />
    <logger name="*" minlevel="Warn" writeTo="warnings" enabled="false" /> <!-- set to true on prod -->
    <logger name="Microsoft.*" maxlevel="Error" final="true" />
    
    <logger name="*" level="Debug" writeTo="debug" enabled="true" /> <!-- set to false on prod -->
    <logger name="*" level="Info" writeTo="info" />
    <logger name="*" level="Warn" writeTo="warn" />
    <logger name="*" level="Error" writeTo="error" />
    <logger name="*" level="Fatal" writeTo="fatal" />
  </rules>
</nlog>